.user {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user__avatar {
  margin-bottom: 50px;
}

.user__desc-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20px;
  &:last-child {
    margin-bottom: 0;
  }
}

.user__key {
  margin-right: 82px;
  font-weight: bold;
  opacity: 0.7;
}

.user__value {
  font-weight: bold;
}