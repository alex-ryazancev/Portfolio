.gradient-btn {
  padding: 30px 118px;
  border: none;
  background-image: linear-gradient(to right, #ad00ed, #5500f2);
  font-size: 18px;
  color: #fff;
  text-transform: uppercase;
  font-weight: bold;
  border-radius: 39px 3px;
  cursor: pointer;
  &:hover {
    border-color: rgba(69, 102, 195, 0.8);
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2) inset, 0 0 10px rgba(69, 102, 195, 0.6);
    outline: 0 none;
  }
}