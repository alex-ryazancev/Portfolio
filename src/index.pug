      .reviews
        .reviews__section.container
          .reviews__info
            p.reviews__info-title Что обо мне говорят
            .reviews-button
              button.reviews-buttons__item.reviews-buttons__item--slide--prev 
                - var icons = ['arrow-down']
                each item in icons
                  a(href="").reviews-buttons__prev
                    +icon(`${item}`, 'reviews-buttons__icon-prev') 
              button.reviews-buttons__item.reviews-buttons__item--slide--next
                - var icons = ['arrow-down']
                each item in icons
                  a(href="").reviews-buttons__next
                    +icon(`${item}`, 'reviews-buttons__icon-next') 
          .reviews__item
            .reviews__content
              .reviews__link
                    - var icons = ['quote']
                    each item in icons
                      a(href="").reviews__link-item
                        +icon(`${item}`, 'reviews__link-icon')
              .reviews__about
                p.reviews__text Этот парень проходил обучение веб-разработке не где-то, а в Loftschool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей
                .container.about__container
